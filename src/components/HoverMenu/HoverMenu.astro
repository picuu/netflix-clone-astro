<div class="hover-menu">
  <div class="trigger">
    <slot name="trigger" />
  </div>

  <div class="options">
    <slot />
  </div>
</div>

<style>
  .hover-menu {
    position: relative;

    --show-animation-delay: 200ms;
    --show-animation-duration: 225ms;
    --show-animation-easing: ease-in-out;
  }

  .trigger:hover + .options,
  .options:hover {
    display: flex;
    opacity: 1;
    transition-delay: var(--show-animation-delay);

    @starting-style {
      opacity: 0;
    }
  }

  .options {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
    gap: 0.3rem;
    padding: 0.6rem 0.8rem;
    background-color: rgb(35 35 35);
    border-radius: 999vw;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    opacity: 0;
    transition:
      opacity var(--show-animation-duration) var(--show-animation-easing),
      display var(--show-animation-duration) allow-discrete;
  }
</style>
