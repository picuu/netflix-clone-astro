---
import { FacebookIcon, TwitterIcon, InstagramIcon, YoutubeIcon } from '@/assets/icons'
---

<footer class="main-footer">
  <ul class="footer-networks">
    <li><FacebookIcon /></li>
    <li><InstagramIcon /></li>
    <li><TwitterIcon /></li>
    <li><YoutubeIcon /></li>
  </ul>

  <ul class="footer-links">
    <li><a href="#">Audiodescripción</a></li>
    <li><a href="#">Centro de ayuda</a></li>
    <li><a href="#">Tarjetas regalo</a></li>
    <li><a href="#">Zona de prensa</a></li>

    <li><a href="#">Inversores</a></li>
    <li><a href="#">Empleo</a></li>
    <li><a href="#">Términos de uso</a></li>
    <li><a href="#">Privacidad</a></li>

    <li><a href="#">Avisos legales</a></li>
    <li><a href="#">Preferencias de cookies</a></li>
    <li><a href="#">Información corporativa</a></li>
    <li><a href="#">Contáctanos</a></li>

    <li><a href="#">Opciones de anuncios</a></li>
  </ul>

  <button class="service-code-button">Código de servicio</button>

  <small class="copyright-advice">© 2024-2025 Itbflix, Inc.</small>
</footer>

<style>
  .main-footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 4%;
    margin: 8rem auto 0;
    width: 100%;
    max-width: calc(980px + 8%);

    --font-size: 1.15rem;
    --font-size-sm: calc(var(--font-size) - 0.2rem);

    & .footer-networks {
      display: flex;
      gap: 2rem;
      color: #fff;
      list-style: none;

      & ul li {
        cursor: pointer;
      }

      & svg {
        --size: 2.25rem;
        width: var(--size);
        height: var(--size);
      }
    }

    & .footer-links {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
      padding-bottom: 1.5rem;
      list-style: none;

      & li {
        padding-right: 22px;
      }

      & li a {
        font-size: var(--font-size);
        font-weight: 450;
        text-decoration: none;
        color: grey;
        cursor: pointer;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    & .service-code-button {
      padding: 0.75rem 0.75rem;
      margin-bottom: 0.75rem;
      width: fit-content;
      background-color: transparent;
      border: 1px solid grey;
      outline: none;
      font-size: var(--font-size);
      color: grey;
      line-height: 1;
      cursor: pointer;

      &:hover {
        border-color: #fff;
        color: #fff;
      }
    }

    & .copyright-advice {
      font-size: var(--font-size-sm);
      color: grey;
      padding-bottom: 2.5rem;
    }
  }

  @media screen and (width < 1200px) {
    .main-footer {
      --font-size: 1.35rem;
      --font-size-small: calc(var(--font-size) - 0.35rem);

      & .footer-networks svg {
        --size: 2.75rem;
      }
    }
  }

  @media screen and (width < 880px) {
    .main-footer {
      --font-size: 1.75rem;
      --font-size-small: calc(var(--font-size) - 0.35rem);

      & .footer-networks {
        gap: 2.5rem;
        padding-bottom: 1.5rem;

        & svg {
          --size: 3.5rem;
        }
      }

      & .footer-links {
        gap: 1.75rem;
      }
    }
  }

  @media screen and (width < 768px) {
    .main-footer {
      --font-size: 1.85rem;
      --font-size-small: calc(var(--font-size) - 0.35rem);

      & .footer-networks svg {
        --size: 3.75rem;
      }

      & .footer-links {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.75rem;
        padding-bottom: 2.25rem;
      }

      & .copyright-advice {
        padding-block: 1rem 3rem;
      }
    }
  }

  @media screen and (width < 576px) {
    .main-footer {
      & .footer-networks svg {
        --size: 4rem;
      }

      & .footer-links {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  }
</style>
