---
interface Props {
  hasBigThumbnails?: boolean
  id?: string
}

const { hasBigThumbnails = false, id }: Props = Astro.props
---

<section
  class={`section ${hasBigThumbnails ? 'big-thumbnails' : 'small-thumbnails'} ${id ? `${id}-section` : undefined}`}
  id={id}
>
  <slot />
</section>

<style>
  main > section {
    margin-bottom: 2.5rem;
  }

  .section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-inline: var(--padding-inline);
  }
</style>
