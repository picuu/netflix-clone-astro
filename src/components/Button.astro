---
interface Props {
  style?: 'primary' | 'secondary'
}

const { style = 'primary' }: Props = Astro.props
---

<button class={style}>
  <span class="icon">
    <slot name="icon" />
  </span>

  <slot />
</button>

<style>
  button {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: fit-content;
    padding-block: 0.8rem;
    padding-inline: 2rem 2.4rem;
    background-color: #fff;
    border: none;
    border-radius: 4px;
    color: #000;
    font-size: 1.6rem;
    font-weight: 500;
    line-height: 2.4rem;
    cursor: pointer;
    transition: background-color 100ms ease-in-out;

    & .icon {
      --size: 2.4rem;
      width: var(--size);
      height: var(--size);
    }

    &:hover {
      background-color: rgba(255 255 255 / 0.75);
    }
  }

  button.secondary {
    background-color: rgba(109 109 110 / 0.7);
    color: #fff;

    &:hover {
      background-color: rgba(100 100 100 / 0.5);
    }
  }
</style>
